{% extends "template.html.twig" %}


{% block title %}{{ parent() }} | Admin | Ajouter linscription{% endblock %}

{% block menuhaut %}


{% endblock %}

{% block milieu %}
    <!-- Page Content -->

<main role="main" class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h1 class="mt-5">Administration du CF2m</h1>
                <p class="lead">Admin | Ajouter une inscription</p>
            </div>
            <div class="col-lg-10 text-left">
               
               
                {# Affichage du formulaire d'inscription #}
                <form action="" method="post" name"linscriptioncreate">

                   
                   
                    <label for="utilisateur.idutilisateur">Nom de l'utilisateur&nbsp</label>
					<select id="utilisateur.idutilisateur" name="utilisateur.idutilisateur" required>
                    {% for utilisateur in detailUsers %}
						<option value="{{ utilisateur.idlutilisateur }}">{{ utilisateur.lenom }} {{utilisateur.leprenom }}</option>
					{% endfor %}
                    </select><br><br>
                    <label for="lasession.idsession">Nom de la session&nbsp</label>
					<select id="lasession.idsession" name="lasession_idsession" required>
					{% for lasession in detailSession %}
						<option value="{{ lasession.idlasession }}">{{lasession.lenom }}  </option>
					{% endfor %}
					</select><br><br>
					<label for="debut">Début de session&nbsp</label><input id="debut" name="debut" type="date" max="2100-12-12" required>&nbsp<span id="debutError" style="color: red; visibility: hidden;">La date de début est postérieure à la date de fin !</span><br><br>
					<label for="fin">Fin de session&nbsp</label><input id="fin" name="fin" type="date" max="2100-12-12" required><br><br>

                   
                    
                    <input onclick="if( $('#debut').val() > $('#fin').val() ) {$('#debutError').css('visibility', 'visible'); $('#debut').css('box-shadow', '0 0 3px 1px red'); event.preventDefault();}" type="submit" value="Inscription">
                </form>
                <h3>{{ error }}</h3>
            </div>
        </div>
</main>


{% endblock %}

